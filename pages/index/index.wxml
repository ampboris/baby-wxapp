<import src='video-item/video-item.wxml'/>
<import src='photo-item/photo-item.wxml'/>
<view class="main">
  <text class="btn" bindtap='didPressChooesImage'>上传图片</text>
  <text class="btn" bindtap='didPressChooesVideo'>上传视频</text>
  <view wx:for="{{photoVideoList}}" wx:for-item="item"> 
    <template is="{{item.type === 'photo' ? 'photo-item' : 'video-item'}}" data="{{...item}}"/>
  </view> 
  <view class="add">
    <view class="addIcon"></view>
    <view class="addPhoto"></view>
    <view class="addVideo"></view>  
  </view>
</view>
