<view class="main">
  <view class="container">
    <view class="photoVideoBox">
      <view wx:for="{{photoVideoList}}" wx:for-item="item" wx:key="*this" class="item-box"> 
        <view wx:if="{{item.type === 'photo'}}" class="photo-item" >
          <image 
            id="myimage" 
            data-id="{{item.id}}"
            data-index="{{index}}" 
            mode="aspectFill"  
            src="{{item.photoVideoUrl[1]}}" 
            bindlongtap="deletePhotoOrVideo" 
            style="width: 270px;height: 180px">
          </image>
        </view>
        <view wx:if="{{item.type === 'video'}}"  class="video-item">
          <video  
            id="myVideo" 
            src="{{item.photoVideoUrl}}" 
            bindlongtab="deletePhotoOrVideo" 
            style="width: 250px;height: 200px" 
            objectFit="fill"  
            poster="{{item.thumbnailUrl}}">
          </video>
        </view>
        <view class="tree-item"></view>
        <view class="date-box" wx:if="{{index%2}}">
          <view class="date"></view>
          <view class="age">1岁 6个月 21天</view>
        </view>
      </view>
    </view>
  </view>
  <view class="add" wx:if="{{true}}">
    <view class="addIcon"></view>
    <view class="addPhoto" bindtap='didPressChooesImage'>photo</view>
    <view class="addVideo" bindtap='didPressChooesVideo'>video</view>  
  </view>
  <view wx:if="{{false}}" class="selectBox" style="left:{{position.left}}px;top:{{position.top}}px"></view>
</view>
